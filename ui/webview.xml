<?xml version="1.0" encoding="utf-8"?>
<MOML>
	<UI>
		<UILAYOUT portrait="720,1230" landscape="720,1230">
		<WINDOW id="mainWindow" layout="0,0,720,1150" align="relative">
			<AGATEWEBVIEW id="webView" src="http://sosim13p.cafe24.com/index.jsp" layout="0,0,720,1150" supportZoom="true" controls="none" defaultImg="#ffffff">
				<LINKMAP>
					<LINK url="http://*" delay="1"/>	//페이지 이동시 깜빡이는 현상 방지 코드
					<LINK url="http://*" onFinish=""/>	//페이지 로딩이 완료될 시 호출 되는 코드
					
					<!-- 공통 -->
					<LINK url="http://*" jsPlugin="js/common.js" delay="500"/>

					<!-- 사이트 -->
					<LINK url="http://nikemania.com/*" jsPlugin="site/nikemania.js" delay="500"/>
				</LINKMAP>
			</AGATEWEBVIEW>
		</WINDOW>
		<!--하단 -->
		<BUTTON id="bottomBtn" layout="620,1136,90,84" defaultImg="res/browser_ico_full.png" onClick="device.toastPopup('메뉴 보이기'), function.webBottomVisible" visible="invisible"/>
		<WINDOW id="webBottomWindow" layout="0,1150,720,80" >
			<STYLEBUTTON layout="0,0,720,80" overlay1="gradation:tb|#f4f4f4|#e3e3e3" enabled="false"/>
			<WINDOW layout="0,0,720,80" align="linear:horizontal|hJustify|center">
				<BUTTON id="backBtn" layout="70,70" defaultImg="res/tab_prev.png" onClick="function.goBack" margin="30,0,0,0" />
				<BUTTON id="fowardBtn" layout="70,70" defaultImg="res/tab_next.png" onClick="function.goForward" />
				<BUTTON layout="70,70" defaultImg="res/tab_home.png" onClick="device.toastPopup('첫 페이지로이동'), webView.src='http://sosim13p.cafe24.com/index.jsp'" />
				<BUTTON layout="70,70" defaultImg="res/tab_reload.png" onClick="device.toastPopup('새로고침'), webView.refresh()" />				
				<BUTTON layout="70,70" defaultImg="res/tab_settings.png" onClick="device.toastPopup('팝업메뉴 활성화'), function.menuPopup" margin="0,0,30,0" />
				<LABEL layout="1,70" defaultImg="#d3d4d5"/>
				<BUTTON layout="70,70" defaultImg="res/browser_bottom_ico_full.png" margin="0,0,15,0" onClick="device.toastPopup('메뉴 숨기기1'), function.webBottomVisible"/>
			</WINDOW>
		</WINDOW>
		<!-- 메뉴 -->
		<WINDOW id="menuWindow" layout="0,0,720,1230" align="relative" visible="invisible" borderStyle="solid:1|#555555" onClick="">
			<STYLEBUTTON layout="362,578,334,550" align="linear:vertical" shape="roundRect(10)" borderStyle="solid:1|#555555" defaultImg="#f4f4f4" enabled="false" />
			<WINDOW layout="362,578,334,550" align="linear:vertical">
				<LABEL layout="304,88" text="이미지업로드" fontSize="25" textAlign="vCenter" textColor="#000000" padding="20,0,0,0" onClick="webView.src='http://sosim13p.cafe24.com/cloudinary/index.jsp'" />
				<LABEL layout="304,88" text="고객센터" fontSize="25" textAlign="vCenter" textColor="#000000" padding="20,0,0,0" onClick="appLauncher.openUri('tel:+1-650-253-0000','')" />
				<LABEL layout="304,88" text="SMS 공유" fontSize="25" textAlign="vCenter" textColor="#000000" padding="20,0,0,0" onClick="appLauncher.openUri('sms:?body=뮬라웨어', '')" />
				<LABEL layout="304,88" text="외부 인터넷 연결" fontSize="25" textAlign="vCenter" textColor="#000000" padding="30,0,0,0" onClick="appLauncher.openUri('http://www.naver.com', '')" />
				<LABEL layout="304,88" text="화면캡쳐" fontSize="25" textAlign="vCenter" textColor="#000000" padding="20,0,0,0" onClick="function.capture"/>
				<LABEL layout="304,88" text="{'버전 정보  ' + application.versionName}" fontSize="25" textAlign="vCenter" textColor="#000000" padding="30,0,0,0" onClick="device.toastPopup('소스보기'), function.viewSource" />
			</WINDOW>
		</WINDOW>
		</UILAYOUT>
	</UI>
	<FUNCTIONLIST>
		<!-- 이전, 다음페이지 이동 버튼에 이미지 처리 함수 -->
		<FUNCTION id="prevForwardCheck">
			<CMD condition="webView.canBack() == 'true'" cmd="backBtn.defaultImg='res/tab_prev.png'" elseCmd="backBtn.defaultImg='res/tab_prev_on.png'"/>
			<CMD condition="webView.canForward() == 'true'" cmd="fowardBtn.defaultImg='res/tab_next.png'" elseCmd="fowardBtn.defaultImg='res/tab_next_on.png'"/>
		</FUNCTION>
		<FUNCTION id="goBack">
			<CMD condition="webView.canBack() == 'true'" cmd="webView.back()" elseCmd="device.toastPopup('첫 화면입니다.')" />
		</FUNCTION>
		<FUNCTION id="goForward">
			<CMD condition="webView.canForward() == 'true'" cmd="webView.forward()" elseCmd="device.toastPopup('다음화면이 없습니다.')" />
		</FUNCTION>
		<FUNCTION id="webBottomVisible">
			<CMD condition="webBottomWindow.visible == 'visible'" cmd="webBottomWindow.visible='invisible', bottomBtn.visible='visible', mainWindow.height=mainWindow.height+80, webView.height=webView.height+80" elseCmd="webBottomWindow.visible='visible', bottomBtn.visible='invisible', mainWindow.height=mainWindow.height-80, webView.height=webView.height-80" />
		</FUNCTION>
		<!-- 메뉴 -->
		<FUNCTION id="menuPopup">
			<CMD condition="menuWindow.visible == 'invisible'" cmd="animation.flyIn('menuWindow', 0, 1230,menuWindow.width,0, 'elasticOut', 100, '')" elseCmd="menuWindow.visible = 'invisible'" />
		</FUNCTION>
		<FUNCTION id="viewSource">
			<FUNCTIONITEM cmd="webContainer.webView.runJavaScript(file.read('js/viewSource.js'))"/>
		</FUNCTION>
		<!-- 화면캡처 -->
		<FUNCTION id="capture">
			<CMD cmd="userVariable.capturePath =image.capture('webView', 0,0,webView.width,webView.height)" />
			<CMD cmd="device.toastPopup(userVariable.capturePath)"/>
		</FUNCTION>
		<!-- 이전, 다음페이지 이동 버튼에 이미지 처리 함수 -->
		<CMD cmd="function.prevForwardCheck" delay="100" />
</FUNCTIONLIST>
</MOML>
